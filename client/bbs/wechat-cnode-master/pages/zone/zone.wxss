/* pages/zone/zone.wxss */.topics{
  height: 100%;
  overflow: hidden;
}
/*导航 nav*/
.top-bar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.top-bar-item {
  display: block;
    width: 30px;
    padding: 10px;
    margin: auto;
}
.top-bar-active{
 border-bottom: 2px solid #80bd01;
    color: #80bd01;
    font-weight: bold;
}

/*列表 list*/
.scroll-posts-list{
  overflow: hidden;
  margin-top: 0rpx;
}
.posts-list{
  position: relative;
  overflow: hidden;
  padding: 0 15rpx;
  border-bottom: 1rpx solid #80bd01;
  
}
.posts-list-info{
  overflow: hidden;
  display: flex;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.posts-list-info .userimg{
  position: relative;
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 0rpx;
  vertical-align: middle;
}
.posts-list-info .item-box{
  flex: 1;
  margin-left: 30rpx;
}
.posts-list-info .item-box .userinfo{
  display: flex;
}
.posts-list-info .item-box .userinfo .username,
.posts-list-info .item-box .userinfo .time{
  flex: 1;
}
.posts-list-info .item-box .userinfo .time{
  text-align: right;
  color: #555;
}
.posts-list-info .item-box .posts-title{
  height: 80rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #35495e;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.posts-list-info .item-box  .posts-tag{
  display: inline-block;
  width: 80rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #80bd01;
  border: 1rpx solid #80bd01;
}
.posts-list-info .item-box .hot{
  color: red;
  border: 1rpx solid red;
}
.posts-list-info image{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.posts-list .bar-info .bar-info-item{
  display: inline-block;
  margin-right: 50rpx;
  line-height: 66rpx;
}
.posts-list .bar-info .bar-info-item-icon{
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.posts-list .bar-info .bar-info-item-number{
  display: inline-block;
  vertical-align: middle;
}

.posts-list .bar-info .bar-info-item2{
  display: inline-block;
  float: right;
  line-height: 66rpx;
}
.posts-list .bar-info .bar-info-item2 .bar-info-item-number{
  color: #80bd01;
}
/*loading*/
.loading-font{
  font-size: 30rpx;
}

.hidden {
    display: none;
}



.header {
  width: 100%;
  height: 200px;
  background-color: #80bd01;
}

.brand {
  box-sizing: border-box;
  display: flex;
  justify-content:center;
  align-items: center;
  width:100%;
  margin-top:40px;
  margin-bottom:50px;
}

.brand-text {
  color: #f6f6f6;
  font-size: 24px;
  line-height: 30px;
}

.brand-img {
  width: 30px;
  height: 30px;
  vertical-align: top;
  margin-right:5px;
}

.search-area {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  align-content: stretch;
  margin:0 15px;
}

.search-words {
  width: 75%;
  height: 38px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px 0px 0px 4px;
  padding-left:10px;
}

.search-btn {
  flex:1;
  height: 40px;
  color: #f6f6f6;
  background-color: #fcb338;
  line-height: 38px;
  font-size: 16px;
  border-radius: 0px 4px 4px 0px;
}

.white-box{
   width:100%;
   background-color:#FFFFFF;
   border-bottom:1px solid #eee;
   display:flex;
   flex-direction: column;
   align-items: flex-start;
   
}

.hot{
   min-height:140px;
   margin-bottom:10px;
}

.recommend{
   height:340px;
   border-top:1px solid #eee;
}

.title{
   width:100%;
   display:flex;
   flex-direction: row;
   justify-content: center; 
   margin:15px 0;
}

.hot-words{
   display:block;
   margin:0 15px;
}

.hot-word{
   float: left;
   background-color: #FFFFFF;
   margin-right:5px;
   margin-bottom:5px;
   padding: 0 14px !important;
}

.articles{
   display:block;
   margin:0 15px;
 }

.article{
  display: flex;
  align-items: flex-start;
  margin-bottom:10px;
}

.article-info{
   flex:1;
   display:flex;
   flex-direction: column;
   align-content: space-between;
}

.article-title{
   color:#000;
   font-weight:400;
}

.line{
   width:35px;
   height:1px;
   margin:6px 0;
   background-color:#eee;
}

 .article-avatar{
   margin-right: 10px;
   width:100px;
   height:60px;
 }
